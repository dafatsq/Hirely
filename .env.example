# HireLy - Environment Variables Configuration
# Copy this file to .env.local and fill in your actual values
# SECURITY WARNING: Never commit .env.local to version control!

# ==============================================================================
# SUPABASE CONFIGURATION (Required)
# ==============================================================================
# Get these from your Supabase project settings:
# Dashboard → Settings → API

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Public anon key (safe to expose to client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (NEVER expose to client - server only)
# This key bypasses Row Level Security - handle with extreme care
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Base URL of your application (used for CORS, redirects, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================================================
# CRON JOB AUTHENTICATION (Required for scheduled tasks)
# ==============================================================================
# Generate a random secret: openssl rand -base64 32
# This protects cron endpoints from unauthorized access
CRON_SECRET=your-random-secret-here

# ==============================================================================
# AI CHATBOT CONFIGURATION (Required for chatbot feature)
# ==============================================================================
# Google Gemini API key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Specify Gemini model (default: gemini-2.5-flash)
GEMINI_MODEL=gemini-2.5-flash

# ==============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ==============================================================================
# If using Resend (https://resend.com)
RESEND_API_KEY=re_your_api_key_here
